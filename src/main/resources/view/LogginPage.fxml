<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elite_driving_school_orm.controller.LoginPageController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 40;" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Left Side - Branding -->
                        <VBox alignment="CENTER" maxWidth="513.0" minWidth="400.0" prefHeight="488.0" prefWidth="513.0" spacing="20.0" style="-fx-background-color: linear-gradient(to right, #3b4cca, #6b7280);">
                            <children>
                                <Label prefHeight="72.0" prefWidth="320.0" text="Elite Driving School" textFill="WHITE">
                                    <font>
                                        <Font name="Cambria" size="38.0" />
                                    </font>
                                </Label>
                                <Label prefHeight="27.0" prefWidth="207.0" text="Management System" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Right Side - Login Form -->
                        <VBox alignment="CENTER" maxWidth="461.0" minWidth="400.0" prefHeight="488.0" prefWidth="461.0" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40;">
                            <children>
                                <Label text="Login to Your Account" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>

                                <VBox spacing="15.0">
                                    <children>
                                        <!-- Username Field -->
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label text="Username / Email" textFill="#34495e">
                                                    <font>
                                                        <Font name="System Bold" size="14.0" />
                                                    </font>
                                                </Label>
                                                <TextField fx:id="txtUsername" prefHeight="43.0" prefWidth="353.0" promptText="Enter your username or email" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14;">
                                                    <font>
                                                        <Font size="14.0" />
                                                    </font>
                                                </TextField>
                                            </children>
                                        </VBox>

                                        <!-- Password Field -->
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label text="Password" textFill="#34495e">
                                                    <font>
                                                        <Font name="System Bold" size="14.0" />
                                                    </font>
                                                </Label>
                                                <HBox spacing="0.0">
                                                    <children>
                                                        <PasswordField fx:id="txtPassword" prefHeight="43.0" prefWidth="534.0" promptText="Enter your password" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5 0 0 5; -fx-padding: 10; -fx-font-size: 14;" HBox.hgrow="ALWAYS">
                                                            <font>
                                                                <Font size="14.0" />
                                                            </font>
                                                        </PasswordField>
                                                        <TextField fx:id="txtPasswordVisible" promptText="Enter your password" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5 0 0 5; -fx-padding: 10; -fx-font-size: 14;" visible="false" HBox.hgrow="ALWAYS">
                                                            <font>
                                                                <Font size="14.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>

                                        <!-- Remember Me and Forgot Password -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <CheckBox fx:id="chkRememberMe" text="Remember me" textFill="#34495e">
                                                    <font>
                                                        <Font size="12.0" />
                                                    </font>
                                                </CheckBox>
                                                <Region HBox.hgrow="ALWAYS" />
                                                <Hyperlink fx:id="linkForgotPassword" onAction="#forgotPasswordAction" text="Forgot Password?" textFill="#3498db">
                                                    <font>
                                                        <Font size="12.0" />
                                                    </font>
                                                </Hyperlink>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Login Button -->
                                <Button fx:id="btnLogin" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#loginAction" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 12;" text="LOGIN">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Button>

                                <!-- Error Message -->
                                <Label fx:id="lblErrorMessage" style="-fx-text-fill: #e74c3c;" visible="false">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>

                                <!-- Footer -->
                                <VBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label text="Need help? Contact: +94 701470932" textFill="#7f8c8d">
                                            <font>
                                                <Font size="11.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
